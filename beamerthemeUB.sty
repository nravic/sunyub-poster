\definecolor{lightgrey}{rgb}{0.95,0.95,0.95} % Defines the color used for content box headers
\definecolor{bluetinge}{rgb}{0.9,0.95,1}
\definecolor{ubblue}{RGB}{0,91,187} % Pantone 282, Hex #002147, RGB 0 33 71, CMYK 100 80 0 60
\definecolor{darkgreen}{rgb}{0,.4,0}

\setbeamercolor{headline}{fg=ubblue,bg=ubblue}
\setbeamercolor{footline}{fg=ubblue,bg=white}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=white}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}

\setbeamercolor{framesubtitle}{fg=white, bg=ubblue}
\setbeamercolor{author in head/foot}{fg=white, bg=ubblue}
\setbeamercolor{title in head/foot}{fg=white, bg=ubblue}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{bg=lightgrey,fg=ubblue}
\setbeamercolor*{block title}{fg=white,bg=ubblue}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=ubblue}

\setbeamercolor*{example body}{fg=lightgrey,bg=ubblue}
\setbeamercolor*{example text}{fg=lightgrey,bg=ubblue}
\setbeamercolor*{example title}{bg=white,fg=ta2gray}

%\setbeamercolor{alerted text}{fg=ta3gray}

%\setbeamercolor{example text}{fg=taorange}
\setbeamercolor{structure}{fg=ubblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3.5ex,dp=0.5ex,center,leftskip=-1em,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}%
    \vspace{-7pt}
    {\hspace{-21pt}\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[leftskip=10pt,colsep*=.75ex,sep=0.5ex,vmode]{block body}%
    \justifying
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode
  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.015\paperwidth}
      \end{column}
      \begin{column}{.71\paperwidth}
        \vskip4ex
         \vspace{20pt}
        \raggedright
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \vspace{20pt}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \vspace{-5pt}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}   
        \vspace{0pt}
      \end{column}
      \begin{column}{.226\paperwidth}
        \vskip11ex
        \vspace{-30pt}
        \begin{center}
         \hfill
          \includegraphics[height=9cm]{UB_Stacked.pdf}
          %\begin{wrapfigure}{r}{0.35\linewidth}
            %\colorbox{white}{\includegraphics[width=.35\linewidth]{LiU_primary_black}} \\
            %\includegraphics[width=.35\linewidth]{uppsalalogo.png}
          %\end{wrapfigure}
        \end{center}
        \vskip2ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

